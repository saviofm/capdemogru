<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<TableSelectDialog
		id="myDialog"
		noDataText="No data"
		title="Select Product"
		search="handleSearch"
        confirm="onPress"
		cancel="handleClose"
		items="{
			path: '/Parcel',
            parameters: {
                expand: 'origemAwb,destinoAwb,origemHawb,destinoHawb,airline,declaracao,natureza,package'
            },
			sorter: {
				path: 'awb',
				descending : false
			}
		}"
    >
		<ColumnListItem
            type="Navigation"
            press=".onPress"
        >
            <cells>
                <ObjectIdentifier
                    title="{awb}"
                />
                <Text text="{transDoc}"/>
                <Text 
                    text="{
                        path:'dtEmissaoDAT', 
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            style: 'short',
                            UTC: true
                        }
                    }"
                />
                <Text text="{airline/airlineCode}"/>
                <Text 
                    text="{
                        path:'createdAt', 
                        type: 'sap.ui.model.type.DateTime',
                        formatOptions: {
                            style: 'short',
                            UTC: true
                        }
                    }"
                />
                <Text text="{origemAwb/iata}"/>
                <Text text="{destinoAwb/iata}"/>
                <Text 
                    text="{
                        path: 'ncm',
                        formatter: '.formatter.ncm'
                    }"
                />
                <Text text="{package/packageDescription}"/>
                <Text text="{volume}"/>
                <ObjectNumber
                    number="{
                        path: 'pesoBruto',
                        formatter: '.formatter.numberUnit'
                    }"
                />
            </cells>
        </ColumnListItem>
		<columns>
            <Column 
                id="nameColumn"
                width="8em">
                <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
            </Column>
            <Column 
                id="transDocColumn"
                demandPopin="true"
                minScreenWidth="Desktop"
                popinDisplay="Inline">
                <Text text="{i18n>transDocTitle}" id="transDocTitle"/>
            </Column>   
            <Column 
                id="dtEmissaoDATColumn"
                demandPopin="true"
                minScreenWidth="Desktop"
                popinDisplay="Inline">
                <Text text="{i18n>dtEmissaoDATTitle}" id="dtEmissaoDATTitle"/>
            </Column>
            <Column 
                id="airlineColumn"
                demandPopin="true"
                minScreenWidth="Desktop"
                popinDisplay="Inline">
                <Text text="{i18n>airlineTitle}" id="airlineTitle"/>
            </Column>
            <Column 
                id="createdAtColumn"
                demandPopin="true"
                minScreenWidth="Desktop"
                popinDisplay="Inline">
                <Text text="{i18n>createdAtTitle}" id="createdAtTitle"/>
            </Column>   
            <Column 
                id="origemAwbColumn"
                demandPopin="true"
                minScreenWidth="Large"
                popinDisplay="Inline">
                <Text text="{i18n>origemAwbTitle}" id="origemAwbTitle"/>
            </Column> 
            <Column 
                id="destinoAwbColumn"
                demandPopin="true"
                minScreenWidth="Large"
                popinDisplay="Inline">
                <Text text="{i18n>destinoAwbTitle}" id="destinoAwbTitle"/>
            </Column>     
            <Column 
                id="ncmAwbColumn"
                demandPopin="true"
                minScreenWidth="Large"
                popinDisplay="Inline">
                <Text text="{i18n>ncmTitle}" id="ncmAwbTitle"/>
            </Column>  
            <Column 
                id="packageAwbColumn"
                demandPopin="true"
                minScreenWidth="Large"
                popinDisplay="Inline">
                <Text text="{i18n>packageTitle}" id="packageAwbTitle"/>
            </Column>                     
            <Column 
                id="volumeColumn"
                hAlign="End">
                <Text text="{i18n>tablevolumeTitle}" id="volumeTitle"/>
            </Column>                   
            <Column id="unitNumberColumn" hAlign="End">
                <Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
            </Column>
        </columns>
	</TableSelectDialog>
</core:FragmentDefinition>