<mvc:View
    controllerName="capdemogru.app.cargoreceipt.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}">

        <semantic:titleHeading>
            <Title
                text="{
                    path: 'awb',
                    formatter: '.formatter.awb'
                }"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
        	<FlexBox
				alignItems="Start"
                justifyContent="SpaceBetween"
                class="sapUiNoContentPadding">
                <Panel 
                    backgroundDesign="Transparent"
                    class="sapUiNoContentPadding">                             
                </Panel>
                <Panel 
                    backgroundDesign="Transparent"
                    class="sapUiNoContentPadding">
                    <Button 
                        icon="sap-icon://measure"
                        press="onPressDanfe" 
                        text="{i18n>Danfe}"
                        visible="true"/>
				</Panel>
            </FlexBox>
            <FlexBox
				alignItems="Start"
                justifyContent="SpaceBetween"
                class="sapUiNoContentPadding"> 
                    <f:SimpleForm id="peso"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="2"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false"
                        class="sapUiNoContentPadding">
                        <f:content>
                            <Label text="{i18n>createdAtTitle}" />
                            <Text text="{
                                path:'createdAt', 
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                    style: 'short',
                                    UTC: true
                                }
                            }"/>
                            <Label text="{i18n>tablepositionTitle}"
                            visible="{= ${position} ? true : false }"/>
                            <Text text="{position}"
                            visible="{= ${volume} ? true : false }"/>
                            <Label text="{i18n>tablevolumeTitle}"
                            visible="{= ${volume} ? true : false }"/>
                            <Text text="{volume}"
                            visible="{= ${volume} ? true : false }"/>
                            <Label text="{i18n>tablepesoLiquidoTitle}"
                            visible="{= ${pesoLiquido} ? true : false }"/>
                            <ObjectNumber
                                number="{
                                    path: 'pesoLiquido',
                                    formatter: '.formatter.numberUnit'
                                }"
                                visible="{= ${pesoBruto} ? true : false }"/>  
                            <Label text="{i18n>tableUnitNumberColumnTitle}"
                            visible="{= ${pesoBruto} ? true : false }"/>
                            <ObjectNumber
                                number="{
                                    path: 'pesoBruto',
                                    formatter: '.formatter.numberUnit'
                                }"
                                visible="{= ${pesoBruto} ? true : false }"/>  
                        </f:content>      
                    </f:SimpleForm>                                     
            </FlexBox>

            <Panel backgroundDesign="Transparent"
                expandable="{device>/system/phone}"
		        expanded="{= !${device>/system/phone} }"
                class="sapUiNoContentPadding"
                >                     
                <f:SimpleForm id="SimpleFormID"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="2"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" >
                    <f:content>
                    <core:Title text=""/>
                        <Label text="{i18n>ObjectID}"/>
                        <Text text="{ID}"/>
                    </f:content>      
                </f:SimpleForm>
            </Panel>
        </semantic:headerContent>
        <semantic:content>
            <VBox>
                <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>GeneralData}">
                <f:SimpleForm id="SimpleFormFornecedor"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false">
			        <f:content>
			            <core:Title text="{i18n>details}"/>
                        <Label text="{i18n>awb}"/>
                        <Text  text="{
                            path: 'awb',
                            formatter: '.formatter.awb'
                            }"
                        />
                        <Label text="{i18n>hawb}"/>
                        <Text  text="{hawb}"/>
                        <Label text="{i18n>ruc}"/>
                        <Text  text="{ruc}"/>
                        <Label text="{i18n>uld}"/>
                        <Text  text="{uld}"/>
                        <Label text="{i18n>declaracao}"/>
                        <HBox >
                            <items>
                                <Text  text="{declaracao/declaracao}"/> 
                                <Text  text=" - "/> 
                                <Text  text="{declaracaoNr}"/> 
                            </items>      
                        </HBox> 
                        
                        <core:Title text="{i18n>details2}"/>  
                        <Label  text="{i18n>transit}"/>
                        <CheckBox selected="{transit}" displayOnly="true"/>  
                        <Label text="{i18n>airTransit}"/>
                        <CheckBox selected="{airTransit}" displayOnly="true"/>
                        <Label text="{i18n>express}"/>
                        <CheckBox selected="{express}" displayOnly="true"/>
                        <Label text="{i18n>manualCargo}"/> 
                        <CheckBox selected="{manualCargo}" displayOnly="true"/>
                        <Label  text="{i18n>dseManual}"/>
                        <CheckBox selected="{dseManual}" displayOnly="true"/>     
                        <Label  text="{i18n>airSide}"/>
                        <CheckBox selected="{airSide}" displayOnly="true"/>              
                    </f:content>      
                </f:SimpleForm>
            </Panel>   

            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>ParcelData}"> 
                <f:SimpleForm id="SimpleForm"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false">
                     
			        <f:content>
				        <core:Title text="{i18n>detailsParcel}"/>
                        <Label text="{i18n>origemAwb}"/>
                        <HBox >
                            <items>
                                <Text  text="{origemAwb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{origemAwb/airportDescription}"/>
                            </items>                      
                        </HBox>
                        <Label text="{i18n>destinoAwb}"/>    
                        <HBox >
                            <items>
                                <Text  text="{destinoAwb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{destinoAwb/airportDescription}"/>
                            </items>                      
                        </HBox> 
                        <Label text="{i18n>origemHawb}"/>
                        <HBox >
                            <items>
                                <Text  text="{origemHawb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{origemHawb/airportDescription}"/>
                            </items>                      
                        </HBox>
                        <Label text="{i18n>destinoHawb}"/>        
                        <HBox >
                            <items>
                                <Text  text="{destinoHawb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{destinoHawb/airportDescription}"/>
                            </items>                      
                        </HBox>                         

                        <Label text="{i18n>bagDesacomp}"/> 
                        <CheckBox selected="{bagDesacomp}" displayOnly="true"/>
        
                        <core:Title text="{i18n>detailsParcel2}"/>
                        <Label text="{i18n>airline}"/>                              
                        <HBox >
                            <items>
                                <Text  text="{airline/airlineCode}"/>
                                <Text  text=" - "/> 
                                <Text  text="{airline/airlineDescription}"/>
                            </items>                      
                        </HBox>    
                        <Label text="{i18n>volume}"/> 
                        <Text text="{volume}"/>
    
                        <Label text="{i18n>pesoBruto}"/> 
                        <Text text="{
                                    path: 'pesoBruto',
                                    formatter: '.formatter.numberUnit'
                                }" />                                            
                        <Label text="{i18n>pesoLiquido}"/> 
                        <Text text="{
                                    path: 'pesoLiquido',
                                    formatter: '.formatter.numberUnit'
                                }" /> 
                        <Label text="{i18n>tara}"/> 
                        <Text text="{
                                    path: 'tara',
                                    formatter: '.formatter.numberUnit'
                                }" /> 
                    </f:content>      
                </f:SimpleForm> 
            </Panel>
            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>additionalData}"> 
                <f:SimpleForm id="PartnerForm"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>  
                        <core:Title text="{i18n>Material}"/>
                        <Label text="{i18n>ncm}"/>                        
                        <Text text="{
                                    path: 'ncm',
                                    formatter: '.formatter.ncm'
                                }"/>
                                
                        <Label text="{i18n>natureza}"/>
                        <MultiComboBox
                            showSecondaryValues= "true"
                            width="500px"
                            items="{
                                path: '/Natureza',
                                sorterimage: { path: 'naturezaCode' }
                            }"
                            selectedKeys="{objectViewAux>/natureza}"
                            enabled="false">
                            <core:ListItem key="{ID}" text="{naturezaCode}" additionalText="{naturezaDescription}"/>
                        </MultiComboBox>                            
                        <Label text="{i18n>obs}"/> 
                        <TextArea enabled="false" value="{obs}"/>
                    </f:content>      
                </f:SimpleForm> 
            </Panel>
            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>}"> 
                    <Label text="{i18n>image}"/> 
                    <Image  
                        src="{image}"
					    decorative="false"/>
            </Panel>
            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>barcode}"> 
                    <Label text="{i18n>barcode}"/> 
                    <Text text="{barcode}"/>
            </Panel>
            </VBox>             
        </semantic:content>
        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>