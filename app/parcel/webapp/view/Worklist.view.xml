<mvc:View
    controllerName="capdemogru.app.parcel.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <FlexBox
				alignItems="End"
                justifyContent="SpaceBetween"
                alignContent="End">
                <Panel backgroundDesign="Transparent">    
                </Panel>

                <Panel 
                    backgroundDesign="Transparent">
                    <Button 
                        icon="sap-icon://add-document"
                        type="Emphasized"
                        press="onCreate" 
                        text="{i18n>buttonCreate}"
                        visible="true"/>
                </Panel>  
            </FlexBox>    
		</semantic:headerContent>

        <semantic:content>
            <Table
                id="table"
                width="auto"
                items="{
                    path: '/Parcel',
                    parameters: {
                                expand: 'declaracao,origemAwb,destinoAwb,origemHawb,destinoHawb,airline,package,exportador,agente,transportador,cobranca'
                            },
                    sorter: {
                        path: 'awb',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column 
                        id="nameColumn"
                        width="8em">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column 
                        id="transDocColumn"
                        demandPopin="true"
                        minScreenWidth="Desktop"
                        popinDisplay="Inline">
                        <Text text="{i18n>transDocTitle}" id="transDocTitle"/>
                    </Column>   
                    <Column 
                        id="dtEmissaoDATColumn"
                        demandPopin="true"
                        minScreenWidth="Desktop"
                        popinDisplay="Inline">
                        <Text text="{i18n>dtEmissaoDATTitle}" id="dtEmissaoDATTitle"/>
                    </Column>
                    <Column 
                        id="airlineColumn"
                        demandPopin="true"
                        minScreenWidth="Desktop"
                        popinDisplay="Inline">
                        <Text text="{i18n>airlineTitle}" id="airlineTitle"/>
                    </Column>
                    <Column 
                        id="createdAtColumn"
                        demandPopin="true"
                        minScreenWidth="Desktop"
                        popinDisplay="Inline">
                        <Text text="{i18n>createdAtTitle}" id="createdAtTitle"/>
                    </Column>   
                    <Column 
                        id="origemAwbColumn"
                        demandPopin="true"
                        minScreenWidth="Large"
                        popinDisplay="Inline">
                        <Text text="{i18n>origemAwbTitle}" id="origemAwbTitle"/>
                    </Column> 
                    <Column 
                        id="destinoAwbColumn"
                        demandPopin="true"
                        minScreenWidth="Large"
                        popinDisplay="Inline">
                        <Text text="{i18n>destinoAwbTitle}" id="destinoAwbTitle"/>
                    </Column>     
                    <Column 
                        id="ncmAwbColumn"
                        demandPopin="true"
                        minScreenWidth="Large"
                        popinDisplay="Inline">
                        <Text text="{i18n>ncmTitle}" id="ncmAwbTitle"/>
                    </Column>  
                    <Column 
                        id="packageAwbColumn"
                        demandPopin="true"
                        minScreenWidth="Large"
                        popinDisplay="Inline">
                        <Text text="{i18n>packageTitle}" id="packageAwbTitle"/>
                    </Column>                     
                    <Column 
                        id="volumeColumn"
                        hAlign="End">
                        <Text text="{i18n>tablevolumeTitle}" id="volumeTitle"/>
                    </Column>                   
                    <Column id="unitNumberColumn" hAlign="End">
                        <Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
                    </Column>

                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{awb}"/>
                            <Text text="{transDoc}"/>
                            <Text text="{
                                path:'dtEmissaoDAT', 
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'short',
                                    UTC: true
                                }
                            }"/>
                            <Text text="{airline/airlineCode}"/>
                            <Text text="{
                                path:'createdAt', 
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                    style: 'short',
                                    UTC: true
                                }
                            }"/>
                            <Text text="{origemAwb/iata}"/>
                            <Text text="{destinoAwb/iata}"/>
                            <Text text="{
                                    path: 'ncm',
                                    formatter: '.formatter.ncm'
                                }"/>
                            <Text text="{package/packageDescription}"/>
                            <Text text="{volume}"/>
                            <ObjectNumber
                                number="{
                                    path: 'pesoBruto',
                                    formatter: '.formatter.numberUnit'
                                }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>