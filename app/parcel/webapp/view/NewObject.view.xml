<mvc:View
    controllerName="capdemogru.app.parcel.controller.NewObject"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield" 
>

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
        showFooter="true"
    >

        <semantic:titleHeading>
            <Title
                text="{
                    path: 'newObject>/awb',
                    formatter: '.formatter.awb'
                }"
                level="H2"
            />
        </semantic:titleHeading>

        <semantic:headerContent>
        	<FlexBox
				alignItems="Start"
                justifyContent="SpaceBetween"
                class="sapUiNoContentPadding">
                <Panel 
                    backgroundDesign="Transparent"
                    class="sapUiNoContentPadding">                             
                </Panel>
                <Panel 
                    backgroundDesign="Transparent"
                    class="sapUiNoContentPadding">
                    <Button 
                        icon="sap-icon://pdf-reader"
                        press="onPressDanfe" 
                        text="{i18n>anexarDanfe}"
                        visible="true"/>
				</Panel>
            </FlexBox>
  
        </semantic:headerContent>
        <semantic:content>
            <VBox>
                <Panel 
                    backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>GeneralData}">
                <f:SimpleForm id="SimpleFormFornecedor"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false">
			        <f:content>
			            <core:Title text="{i18n>details}"/>
                        <Label text="{i18n>awb}"/>
                        <MaskInput 
                            mask="999-99999999" 
                            placeholderSymbol="_" 
                            required="true" 
                            value="{newObject>/awb}"
                            visible="{newObject>State/awb/Visible}"
                            enabled="{newObject>State/awb/Enabled}"
                        />
                        <Label text="{i18n>hawb}"/>
                        <MaskInput 
                            mask="999-99999999" 
                            placeholderSymbol="_" 
                            required="true"
                            value="{newObject>/hawb}"
                            visible="{newObject>State/hawb/Visible}"
                            enabled="{newObject>State/hawb/Enabled}"
                        />
                        <Label text="{i18n>ruc}"/>
                        <MaskInput
                            mask="99999999999" 
                            placeholderSymbol="_" 
                            required="true" 
                            value="{newObject>/ruc}"
                            visible="{newObject>State/ruc/Visible}"
                            enabled="{newObject>State/ruc/Enabled}"
                        />
                        <Label text="{i18n>declaracao}"/>
                        <HBox >
                            <items>
                                <ComboBox
                                    selectedKey="{newObject>/declaracao}"
                                    visible="{newObject>State/declaracao/Visible}"
                                    enabled="{newObject>State/declaracao/Enabled}"
                                    items="{ 
                                        path: '/Declaracao'
                                    }"
                                >
                                    <core:ListItem key="{declaracao}" text="{declaracao} - {declaracaoDescription}"/>
                                </ComboBox>

                                <Input  
                                    value="{newObject>/declaracaoNr}" 
                                    visible="{newObject>State/declaracao/Visible}"
                                    enabled="{newObject>State/declaracao/Enabled}"
                                />
                            </items>      
                        </HBox> 
                        <Label text="{i18n>transDoc}"/>
                        <Text  text="{newObject>/transDoc}"/> 
                                                    
                        <core:Title text="{i18n>details2}"/>          
                        <Label  text="{i18n>transit}"/>
                        <CheckBox selected="{newObject>/transit}" displayOnly="true"/>  
                        <Label text="{i18n>airTransit}"/>
                        <CheckBox selected="{newObject>/airTransit}" displayOnly="true"/>
                               
                            
                        <Label  text="{i18n>dseManual}"/>
                        <CheckBox selected="{newObject>/dseManual}" displayOnly="true"/>              
                    </f:content>      
                </f:SimpleForm>
            </Panel>   

            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>ParcelData}"> 
                <f:SimpleForm id="SimpleForm"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false">
                     
			        <f:content>
				        <core:Title text="{i18n>detailsParcel}"/>
                        <Label text="{i18n>origemAwb}"/>
                        <HBox >
                            <items>
                                <Text  text="{newObject>/origemAwb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/origemAwb/airportDescription}"/>
                            </items>                      
                        </HBox>
                        <Label text="{i18n>destinoAwb}"/>    
                        <HBox >
                            <items>
                                <Text  text="{newObject>/destinoAwb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/destinoAwb/airportDescription}"/>
                            </items>                      
                        </HBox> 
                        <Label text="{i18n>origemHawb}"/>
                        <HBox >
                            <items>
                                <Text  text="{newObject>/origemHawb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/origemHawb/airportDescription}"/>
                            </items>                      
                        </HBox>
                        <Label text="{i18n>destinoHawb}"/>        
                        <HBox >
                            <items>
                                <Text  text="{newObject>/destinoHawb/iata}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/destinoHawb/airportDescription}"/>
                            </items>                      
                        </HBox>                         
                           
                        <core:Title text="{i18n>detailsParcel2}"/>
                        <Label text="{i18n>airline}"/>                              
                        <HBox >
                            <items>
                                <Text  text="{newObject>/airline/airlineCode}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/airline/airlineDescription}"/>
                            </items>                      
                        </HBox>                                
                        <Label text="{i18n>express}"/>
                        <CheckBox selected="{express}" displayOnly="true"/>
                        <Label text="{i18n>express}"/>
                        <HBox >
                            <items>
                                <Text  text="{newObject>/package/packageCode}"/>
                                <Text  text=" - "/> 
                                <Text  text="{newObject>/package/packageDescription}"/>
                            </items>                      
                        </HBox>
                        <Label text="{i18n>conteudo}"/>
                        <Text  text="{conteudo}"/>
                        <Label text="{i18n>bagDesacomp}"/> 
                        <CheckBox selected="{newObject>/bagDesacomp}" displayOnly="true"/>
                    </f:content>      
                </f:SimpleForm> 
            </Panel>
            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>additionalData}"> 
                <f:SimpleForm id="PartnerForm"
			        editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="2"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content> 
                        <core:Title text="{i18n>Partner}"/>
                        <Label text="{i18n>exportador}"/>

                        <Text  text="{
                                    path: 'newObject>/exportador/CNPJCPF',
                                    formatter: '.formatter.cnpj'
                                }">
                            <layoutData>
                                <l:GridData span="XL3 L2 M3 S6"  />
     
                            </layoutData>
                        </Text>
                        <Text  text="{newObject>/exportador/partnerDescription}"/>
                        <Label text="{i18n>agente}"/>
 
                        <Text  text="{
                                    path: 'newObject>/agente/CNPJCPF',
                                    formatter: '.formatter.cnpj'
                                }">
                            <layoutData>
                                <l:GridData span="XL3 L2 M3 S6"  />
     
                            </layoutData>
                        </Text>
                        <Text  text="{agente/partnerDescription}"/>
                        <Label text="{i18n>transportador}"/>
                        <Text  text="{
                                    path: 'transportador/CNPJCPF',
                                    formatter: '.formatter.cnpj'
                                }">
                            <layoutData>
                                <l:GridData span="XL3 L2 M3 S6"  />
                            </layoutData>
                        </Text>
                        <Text  text="{transportador/partnerDescription}"/>   
                        <Label text="{i18n>cobranca}"/>                        
                        <Text text="{newObject>cobranca/partnerTypeDescription}"/> 

                        <core:Title text="{i18n>Material}"/>
                        <Label text="{i18n>ncm}"/>                        
                        <Text text="{
                                    path: 'newObject>ncm',
                                    formatter: '.formatter.ncm'
                                }"/>
                                
                        <Label text="{i18n>natureza}"/>
                        <MultiComboBox
                            showSecondaryValues= "true"
                            width="500px"
                            items="{
                                path: '/Natureza',
                                sorter: { path: 'naturezaCode' }
                            }"
                            selectedItems="{newObject>/natureza}"
                        >
                            <core:ListItem key="{ID}" text="{naturezaCode}" additionalText="{naturezaDescription}"/>
                        </MultiComboBox>                            
                        <Label text="{i18n>obs}"/> 
                        <TextArea enabled="false" value="{newObject>/obs}"/>
                    </f:content>      
                </f:SimpleForm> 
            </Panel>
            <Panel backgroundDesign="Transparent"
                    expandable="{device>/system/phone}"
                    expanded="true"
                    headerText="{i18n>confirmation}"> 
                <CheckBox selected="{newObject>/confirm}" displayOnly="true" text="{i18n>confirm}"/>   
            </Panel>
            </VBox>             
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

        <semantic:footerMainAction>
            <semantic:FooterMainAction 
                text="{i18n>ObjectButtonSave}" 
                press="onPressSave"
            />
        </semantic:footerMainAction>

    </semantic:SemanticPage>

</mvc:View>